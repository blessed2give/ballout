<h1><%= @location.name %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @location.address %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit Location", edit_location_path(@location), class: 'btn btn-success' %>
    <%= link_to "Delete Location", @location, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this location?'} %>
  </div>
</div>
