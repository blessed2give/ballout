<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAu2IxTtOntB4U6P93slCIF0mQZp4WUyxU&libraries=places"></script>
<h1>New Location</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @location do |f| %>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, id: 'address', class: 'form-control', placeholder: 'Enter location' %>
      </div>
      <div class="form-group">
        <%= f.submit "Search", class: 'btn btn-success', id: 'find' %>
      </div>
    <% end %>
  </div>
</div>

<div id="map" class="container">
</div>
